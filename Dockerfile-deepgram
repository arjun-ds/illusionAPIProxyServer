FROM python:3.11-slim

WORKDIR /app

# Copy requirements first for better caching
COPY requirements-deepgram.txt .
RUN pip install --no-cache-dir -r requirements-deepgram.txt

# Copy the application files
COPY deepgram_app.py .
COPY .env* ./

# Make port available to the outside world
EXPOSE 8000

# Command to run the application
CMD ["python3", "deepgram_app.py"]